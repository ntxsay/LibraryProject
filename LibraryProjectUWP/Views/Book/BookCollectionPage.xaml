<Page
    x:Class="LibraryProjectUWP.Views.Book.BookCollectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LibraryProjectUWP.Views.Book"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:viewModels="using:LibraryProjectUWP.ViewModels"
    xmlns:generalVm="using:LibraryProjectUWP.ViewModels.General"
    xmlns:userControls="using:LibraryProjectUWP.Views.UserControls"
    xmlns:booktVm="using:LibraryProjectUWP.ViewModels.Book"
    xmlns:dTemplateSelectors="using:LibraryProjectUWP.Code.DataTemplatesSelector"
    xmlns:customConverters="using:LibraryProjectUWP.Code.Converters"
    xmlns:MTUUi="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:MTUUConverters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:MTUUControls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:MUIXC="using:Microsoft.UI.Xaml.Controls" Margin="0 38 0 0" Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <Page.Resources>
        <customConverters:ClassificationAgeToStringConverter x:Key="classificationAgeToStringConverter" />
        <customConverters:IntToBooleanConverter x:Key="intToBooleanConverter" />
        <customConverters:IntToVisibilityConverter x:Key="intToVisibilityConverter" />
        <customConverters:IntToInvertVisibilityConverter x:Key="intToInvertVisibilityConverter" />
        <customConverters:SelectedPageColorConverter x:Key="selectedPageColorConverter" />
        <customConverters:ContactListTostringConverter x:Key="contactListTostringConverter" />
        <customConverters:CountToVisibilityConverter x:Key="countToVisibilityConverter" />
        <customConverters:ObjectToBooleanConverter x:Key="objectToBooleanConverter" />
        <customConverters:CountToEnablingConverter x:Key="CountToEnablingConverter" />
        <customConverters:CountOneToEnablingConverter x:Key="CountOneToEnablingConverter" />
        <customConverters:CountToStringPhrase x:Key="CountToStringPhraseConverter" />
        <customConverters:DateTimeToStringDisplay x:Key="dateTimeToStringDisplay" />
        <customConverters:GroupToBooleanConverter x:Key="groupbyToBooleanConverter" />
        <customConverters:SortToBooleanConverter x:Key="sortbyToBooleanConverter" />
        <customConverters:OrderByToBooleanConverter x:Key="orderbyToBooleanConverter" />
        <MTUUConverters:BoolToObjectConverter x:Key="BoolToInvertVisibilityConverter" TrueValue="Visible" FalseValue="Collapsed"/>
        <MTUUConverters:BoolToObjectConverter x:Key="InvertBoolConverter" TrueValue="False" FalseValue="True"/>
        <MTUUConverters:BoolToObjectConverter x:Key="BoolToVisibilityConverterSynopsisRtf" TrueValue="Visible" FalseValue="Collapsed"/>
        <MTUUConverters:BoolToObjectConverter x:Key="BoolToVisibilityConverterSynopsisHtml" TrueValue="Visible" FalseValue="Collapsed"/>
        <MTUUConverters:StringFormatConverter x:Key="StringFormatConverter"/>
        <!--Item Flyout-->
        <XamlUICommand x:Name="ChangeBackgroundImageXUiCmd" 
                       ExecuteRequested="ChangeBackgroundImageXUiCmd_ExecuteRequested"
                       Description="Modifie l'image qui sert à présenter le livre">
        </XamlUICommand>
        <XamlUICommand x:Name="ChangeJaquetteXamlUICommand" 
                       ExecuteRequested="ChangeJaquetteXamlUICommand_ExecuteRequested"
                       Description="Modifie l'image qui sert à présenter le livre" 
                       Label="Modifier la jaquette">
        </XamlUICommand>
        <XamlUICommand x:Name="EditBookInfosXamlUICommand" 
                       ExecuteRequested="EditBookInfosXamlUICommand_ExecuteRequested"
                       Description="Edite les informations de base du livre" 
                       Label="Editer les informations">
        </XamlUICommand>
        <XamlUICommand x:Name="DeleteLibraryXamlUICommand" 
                       ExecuteRequested="DeleteLibraryXamlUICommand_ExecuteRequested"
                       Description="Supprime définitivement le livre actuel" 
                       Label="Supprimer le livre">
        </XamlUICommand>
        <XamlUICommand x:Name="ExportThisBookXamlUICommand"
                       ExecuteRequested="ExportThisBookXamlUICommand_ExecuteRequested"
                       Description="Exporte le livre et son contenu dans un dossier">
        </XamlUICommand>
        <!--CommandBar-->
        <XamlUICommand x:Name="ReloadDataXamlUICommand" 
                       ExecuteRequested="ReloadDataXamlUICommand_ExecuteRequested"
                       Description="Actualise les données depuis la base de données" 
                       Label="Actualiser les données">
        </XamlUICommand>
        <XamlUICommand x:Name="NewBookXamlUICommand" 
                       ExecuteRequested="NewBookXamlUICommand_ExecuteRequested"
                       Description="Ajoute un nouveau livre" 
                       Label="Ajouter un livre">
        </XamlUICommand>
        <XamlUICommand x:Name="BookExemplaryListXUiCmd" 
                       ExecuteRequested="BookExemplaryListXUiCmd_ExecuteRequested"
                       Description="Affiche la liste des exemplaires de ce livre" 
                       Label="Afficher les exemplaires">
        </XamlUICommand>
        <XamlUICommand x:Name="NewBookPretXUiCmd" 
                       ExecuteRequested="NewBookPretXUiCmd_ExecuteRequested"
                       Description="">
        </XamlUICommand>
        <XamlUICommand x:Name="NewContactXamlUICommand" 
                       ExecuteRequested="NewContactXamlUICommand_ExecuteRequested"
                       Description="Ajoute un nouvel adhérant" 
                       Label="Ajouter un adhérant">
        </XamlUICommand>
        <XamlUICommand x:Name="DisplayContactListXamlUICommand" 
                       ExecuteRequested="DisplayContactListXamlUICommand_ExecuteRequested"
                       Description="Affiche la liste des adhérants" 
                       Label="Afficher les adhérants">
        </XamlUICommand>
        <XamlUICommand x:Name="NewAuthorXamlUICommand" 
                       ExecuteRequested="NewAuthorXamlUICommand_ExecuteRequested"
                       Description="Ajoute un nouvel auteur" 
                       Label="Ajouter un auteur">
        </XamlUICommand>
        <XamlUICommand x:Name="DisplayAuthorListXamlUICommand" 
                       ExecuteRequested="DisplayAuthorListXamlUICommand_ExecuteRequested"
                       Description="Affiche la liste des auteurs existants" 
                       Label="Afficher les auteurs">
        </XamlUICommand>
        <XamlUICommand x:Name="ExportAllBookXamlUICommand" 
                       ExecuteRequested="ExportAllBookXamlUICommand_ExecuteRequested"
                       Description="Exporte tous les livres existants">
        </XamlUICommand>
        <XamlUICommand x:Name="NewCollectionXUiCmd" 
                       ExecuteRequested="NewCollectionXUiCmd_ExecuteRequested"
                       Description="Ajoute une nouvelle collection" 
                       Label="Ajouter une collection">
        </XamlUICommand>
        <XamlUICommand x:Name="NewEditorXUiCmd" 
                       ExecuteRequested="NewEditorXUiCmd_ExecuteRequested"
                       Description="Ajoute un nouvel éditeur" 
                       Label="Ajouter un éditeur">
        </XamlUICommand>
        <XamlUICommand x:Name="DisplayEditorListXUiCmd" 
                       ExecuteRequested="DisplayEditorListXUiCmd_ExecuteRequested"
                       Description="Afficher la liste des éditeurs" 
                       Label="Afficher les éditeurs">
        </XamlUICommand>
        <XamlUICommand x:Name="DisplayCategorieListXUiCmd" 
                       ExecuteRequested="DisplayCategorieListXUiCmd_ExecuteRequested"
                       Description="Affiche les catégories">
        </XamlUICommand>
        <XamlUICommand x:Name="DisplayCollectionListXUiCmd" 
                       ExecuteRequested="DisplayCollectionListXUiCmd_ExecuteRequested"
                       Description="Affiche les collections">
        </XamlUICommand>
        <XamlUICommand x:Name="GroupByLetterXamlUICommand" 
                       ExecuteRequested="GroupByLetterXamlUICommand_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="GroupByCreationYearXamlUICommand" 
                       ExecuteRequested="GroupByCreationYearXamlUICommand_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="GroupByParutionYearXamlUICommand" 
                       ExecuteRequested="GroupByParutionYearXamlUICommand_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="GroupByNoneXamlUICommand" 
                       ExecuteRequested="GroupByNoneXamlUICommand_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="OrderByCroissantXamlUICommand" 
                       ExecuteRequested="OrderByCroissantXamlUICommand_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="OrderByDCroissantXamlUICommand" 
                       ExecuteRequested="OrderByDCroissantXamlUICommand_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="SortByNameXamlUICommand" 
                       ExecuteRequested="SortByNameXamlUICommand_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="SortByDateCreationXamlUICommand" 
                       ExecuteRequested="SortByDateCreationXamlUICommand_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="GotoPageXUiCmd" 
                       ExecuteRequested="GotoPageXUiCmd_ExecuteRequested">
        </XamlUICommand>
        <XamlUICommand x:Name="CancelTaskXUiCmd" 
                       ExecuteRequested="CancelTaskXUiCmd_ExecuteRequested">
        </XamlUICommand>
        <ThemeShadow x:Name="BackgroundGridShadow"/>
        <DataTemplate x:DataType="booktVm:LivreVM" x:Key="ThumbnailSimpleDataTemplate">
            <Grid x:Name="simpleThumnailItemContainer" Height="282" Width="180" Shadow="{StaticResource BackgroundGridShadow}" Translation="0,0,32">
                <ToolTipService.ToolTip>
                    <ToolTip>
                        <TextBlock MaxWidth="400" MaxHeight="500" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" IsTextSelectionEnabled="True">
                            <Run Text="{x:Bind MainTitle, Mode=OneWay}" FontWeight="Medium" FontSize="16"/>
                            <LineBreak /><Run Text="{x:Bind NbExemplaires, Mode=OneWay}" FontSize="14"/><Run Text=" exemplaire(s)" FontSize="14"/>
                            <LineBreak /><Run Text="{x:Bind Description.Resume, Mode=OneWay}" FontSize="14"/>
                        </TextBlock>
                    </ToolTip>
                </ToolTipService.ToolTip>
                <Viewbox x:Name="ViewboxSimpleThumnailDatatemplate" Height="282" Width="180" Tag="{x:Bind}" MTUUi:FrameworkElementExtensions.Cursor="Hand" PointerPressed="ViewboxSimpleThumnailDatatemplate_PointerPressed">
                    <Border Height="301" Width="192" Background="WhiteSmoke" BorderThickness="0" CornerRadius="8">
                        <Grid Height="301" Width="192">
                            <Image Source="{x:Bind JaquettePath, Mode=OneWay}" Tag="{x:Bind JaquettePath, Mode=OneWay}" Stretch="UniformToFill" Loaded="Image_Loaded_1"/>
                            <Grid Height="150" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="{x:Bind NbExemplaires, Converter={StaticResource intToVisibilityConverter}, Mode=OneWay}">
                                <Polygon HorizontalAlignment="Left" VerticalAlignment="Top" Fill="LightBlue" Points="0,110, 0,70, 70,0, 110,0"/>
                                <Polygon HorizontalAlignment="Left" VerticalAlignment="Top" Fill="BlueViolet" Points="0,110, 0,71, 71,0, 110,0"/>
                                <TextBlock Text="1 prêt(s)" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Margin="-28,35,0,0" 
                                                   UseLayoutRounding="False" d:LayoutRounding="Auto" Width="140" FontSize="16" FontWeight="Bold" Foreground="White">
                                    <TextBlock.RenderTransform>
                                        <CompositeTransform Rotation="-45.15"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Border>
                </Viewbox>
                <Grid x:Name="GridActions" Margin="1,0,1,1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Background="{ThemeResource SystemControlChromeLowAcrylicElementBrush}" 
                      Padding="4, 8" BorderThickness="0" CornerRadius="8 8 8 8" ColumnSpacing="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="22"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{x:Bind MainTitle, Mode=OneWay}" TextWrapping="WrapWholeWords" FontSize="16" VerticalAlignment="Center" MaxLines="2"/>
                    <Button x:Name="BtnActions" BorderBrush="Transparent" BorderThickness="0" Background="Transparent" Grid.Column="1" ToolTipService.ToolTip="Plus d'informations" MTUUi:FrameworkElementExtensions.Cursor="Hand" 
                            Padding="0" Width="22" HorizontalAlignment="Right">
                        <Border CornerRadius="14" Height="20" Width="20" BorderThickness="1" HorizontalAlignment="Center">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="Yellow" Offset="0.0" />
                                    <GradientStop Color="Red" Offset="0.25" />
                                    <GradientStop Color="Blue" Offset="0.75" />
                                    <GradientStop Color="LimeGreen" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <FontIcon FontSize="12" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE712;"  />
                        </Border>
                        <Button.Flyout>
                            <MenuFlyout Placement="BottomEdgeAlignedLeft">
                                <MenuFlyoutItem Text="Première de couverture" Command="{StaticResource ChangeJaquetteXamlUICommand}" CommandParameter="{x:Bind }">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xEB9F;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Prêter ce livre" Command="{StaticResource NewBookPretXUiCmd}" CommandParameter="{x:Bind }">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE748;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Exemplaires" Command="{StaticResource BookExemplaryListXUiCmd}" CommandParameter="{x:Bind }">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xF5ED;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Ouvrir ce livre">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8A7;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Exporter ce livre" Command="{StaticResource ExportThisBookXamlUICommand}" CommandParameter="{x:Bind }">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xEDE1;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Editer ce livre" Command="{StaticResource EditBookInfosXamlUICommand}" CommandParameter="{x:Bind }">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE70F;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Supprimer ce livre" Command="{StaticResource DeleteLibraryXamlUICommand}" CommandParameter="{x:Bind }" Foreground="OrangeRed">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE74D;" Foreground="OrangeRed"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="GridViewTemplate" x:DataType="booktVm:LivreVM">
            <ScrollViewer x:Name="scrollItems" HorizontalScrollMode="Disabled" ViewChanged="ScrollItems_ViewChanged">
                <GridView x:Name="GridViewItems" ItemsSource="{Binding }" SelectionMode="Extended" IsItemClickEnabled="False" Padding="4,14" Loaded="GridViewItems_Loaded" Unloaded="GridViewItems_Unloaded"
                            ItemTemplate="{StaticResource ThumbnailSimpleDataTemplate}" ScrollViewer.VerticalScrollMode="Disabled" IsMultiSelectCheckBoxEnabled="True" SingleSelectionFollowsFocus="True"
                          KeyDown="GridViewItems_KeyDown">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem" >
                            <Setter Property="Margin" Value="7" />
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid  Orientation="Horizontal" HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition />
                            <AddDeleteThemeTransition/>
                            <NavigationThemeTransition/>
                            <ContentThemeTransition/>
                        </TransitionCollection>
                    </GridView.ItemContainerTransitions>
                </GridView>
            </ScrollViewer>
        </DataTemplate>
        <DataTemplate x:Key="DataGridViewTemplate" x:DataType="booktVm:LivreVM">
            <MTUUControls:DataGrid x:Name="DataGridItems" ItemsSource="{Binding Mode=OneWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0 14 0 0"
                                                           HorizontalScrollBarVisibility="Visible" Loaded="DataGridItems_Loaded" Unloaded="DataGridItems_Unloaded"
                                        VerticalScrollBarVisibility="Visible" AlternatingRowBackground="Transparent" AlternatingRowForeground="Gray"
                                        AreRowDetailsFrozen="False" AreRowGroupHeadersFrozen="True"
                                        AutoGenerateColumns="False" CanUserSortColumns="False" CanUserReorderColumns="True" CanUserResizeColumns="True" ColumnHeaderHeight="32"
                                        MaxColumnWidth="500" FrozenColumnCount="2" GridLinesVisibility="None" HeadersVisibility="Column"
                                        IsReadOnly="True" BorderThickness="0"
                                        RowDetailsVisibilityMode="VisibleWhenSelected" SelectionMode="Extended"
                                        RowGroupHeaderPropertyNameAlternative="Range">
                <MTUUControls:DataGrid.Columns>
                    <MTUUControls:DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                    <MTUUControls:DataGridTextColumn Header="Titre" Binding="{Binding MainTitle}"/>
                    <MTUUControls:DataGridTextColumn Header="Autre(s) titre(s)" Binding="{Binding TitresOeuvreStringList,  Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Auteur(s)" Binding="{Binding AuteursStringList,  Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Maison(s) d'édition" Binding="{Binding Publication.EditeursStringList,  Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Date de parution" Binding="{Binding Publication.DateParution,  Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Collection(s)" Binding="{Binding Publication.CollectionsStringList,  Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Classification âge" Binding="{Binding ClassificationAge.StringClassification, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Format" Binding="{Binding Format.Format, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Dimensions (L × l × E)" Binding="{Binding Format.Dimensions,  Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Pages" Binding="{Binding Format.NbOfPages,  Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Langue" Binding="{Binding Publication.Langue,  Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Nombre d'exemplaires" Binding="{Binding NbExemplaires, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="Cotation" Binding="{Binding Identification.Cotation, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="ISBN" Binding="{Binding Identification.ISBN, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="ISBN-10" Binding="{Binding Identification.ISBN10, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="ISBN13" Binding="{Binding Identification.ISBN13, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="ISSN" Binding="{Binding Identification.ISSN, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTextColumn Header="ASIN" Binding="{Binding Identification.ASIN, Mode=OneWay}" Width="Auto"/>
                    <MTUUControls:DataGridTemplateColumn Header="Date d'ajout" Tag="First_ascent">
                        <MTUUControls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DateAjout, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:dd/MM/yyy}'}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </DataTemplate>
                        </MTUUControls:DataGridTemplateColumn.CellTemplate>
                        <MTUUControls:DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <CalendarDatePicker Margin="3,4,3,3" Date="{Binding DateAjout, Mode=OneWay}"/>
                            </DataTemplate>
                        </MTUUControls:DataGridTemplateColumn.CellEditingTemplate>
                    </MTUUControls:DataGridTemplateColumn>
                </MTUUControls:DataGrid.Columns>
                <MTUUControls:DataGrid.RowStyle>
                    <Style TargetType="MTUUControls:DataGridRow">
                        <Setter Property="MTUUControls:DataGridRow.ContextFlyout">
                            <Setter.Value>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Modifier la couverture" Command="{StaticResource ChangeJaquetteXamlUICommand}" CommandParameter="{Binding }">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xEB9F;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem Text="Exemplaires" Command="{StaticResource BookExemplaryListXUiCmd}" CommandParameter="{Binding }">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE71B;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutSubItem Text="Catégories" Tag="{x:Bind Mode=OneWay}">
                                        <MenuFlyoutSubItem.Icon>
                                            <FontIcon Glyph="&#xE81E;"/>
                                        </MenuFlyoutSubItem.Icon>
                                    </MenuFlyoutSubItem>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem Text="Ouvrir ce livre">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE8A7;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="Exporter ce livre" Command="{StaticResource ExportThisBookXamlUICommand}" CommandParameter="{Binding }">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xEDE1;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Text="Editer ce livre" Command="{StaticResource EditBookInfosXamlUICommand}" CommandParameter="{Binding }">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE70F;"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem Text="Supprimer ce livre" Command="{StaticResource DeleteLibraryXamlUICommand}" CommandParameter="{Binding }" Foreground="OrangeRed">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE74D;" Foreground="OrangeRed"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </MTUUControls:DataGrid.RowStyle>
            </MTUUControls:DataGrid>
        </DataTemplate>
        <DataTemplate x:DataType="booktVm:LivreVM" x:Key="ItemAutoSuggestDataTemplate">
            <Grid Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Height="52" Width="50" Stretch="Uniform" Tag="{x:Bind JaquettePath, Mode=OneWay}" Loaded="Image_Loaded"  HorizontalAlignment="Left"/>
                <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="4" Padding="4,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{x:Bind MainTitle}" FontWeight="Medium" HorizontalAlignment="Left"/>
                    </Grid>
                    <TextBlock HorizontalAlignment="Stretch" TextAlignment="Left" Foreground="#616161" FontSize="12">
                        <Run Text="{x:Bind DateAjout, Converter={StaticResource dateTimeToStringDisplay}, ConverterParameter='ddd dd MMM yyyy'}" />
                        <Run Text="&#x000B7;" FontSize="16" FontWeight="Bold"/>
                        <Run Text="0" />
                        <Run Text="prêt(s)" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <dTemplateSelectors:DataViewModeTemplateSelector x:Key="dataViewModeTemplateSelector"
        DataGridViewTemplate="{StaticResource DataGridViewTemplate}"
        GridViewTemplate="{StaticResource GridViewTemplate}" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image x:Name="ImageBackground" Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Opacity="1" Loaded="ImageBackground_Loaded"/>
        <Grid Grid.Row="0" Background="{ThemeResource SystemControlChromeLowAcrylicElementBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">

            </Grid>
            <Grid Grid.Row="1" Padding="0 50 0 0">
                <SplitView PaneBackground="{ThemeResource SystemControlChromeLowAcrylicElementBrush}" 
                IsPaneOpen="{x:Bind ViewModelPage.IsSplitViewOpen, Mode=OneWay}" PanePlacement="Right" OpenPaneLength="{x:Bind ViewModelPage.SplitViewWidth, Mode=OneWay}" CompactPaneLength="88" DisplayMode="Inline">
                    <!--Items-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Pivot x:Name="PivotItems" ItemsSource="{x:Bind ViewModelPage.GroupedRelatedViewModel.Collection, Mode=OneWay}" Tag="{x:Bind ViewModelPage.GroupedRelatedViewModel.DataViewMode, Mode=OneWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                               ItemTemplateSelector="{StaticResource dataViewModeTemplateSelector}" SelectedIndex="{x:Bind ViewModelPage.SelectedPivotIndex, Mode=OneWay}" PivotItemLoaded="PivotItems_PivotItemLoaded">
                            <Pivot.OpacityTransition>
                                <ScalarTransition />
                            </Pivot.OpacityTransition>
                            <Pivot.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Key}"></TextBlock>
                                </DataTemplate>
                            </Pivot.HeaderTemplate>
                        </Pivot>
                        <Grid Grid.Row="1">
                            <ScrollViewer x:Name="scrollVPages" VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Auto" Padding="15 5 15 10">
                                <ItemsControl x:Name="itemControlPageList" ItemsSource="{x:Bind ViewModelPage.PagesList, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="generalVm:PageSystemVM">
                                            <Button Command="{StaticResource GotoPageXUiCmd}" CommandParameter="{x:Bind CurrentPage, Mode=OneWay}" MTUUi:FrameworkElementExtensions.Cursor="Hand" Background="{x:Bind BackgroundColor, Mode=OneWay}">
                                                <TextBlock Text="{x:Bind CurrentPage, Mode=OneWay}" />
                                                <ToolTipService.ToolTip>
                                                    <ToolTip>
                                                        <TextBlock>
                                                            <Run Text="Accéder à la page" />
                                                            <Run Text="{x:Bind CurrentPage, Mode=OneWay}" FontWeight="Medium"/>
                                                        </TextBlock>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                    <SplitView.Pane>
                        <Grid RowSpacing="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <ComboBox x:Name="CmbxSideBarItemTitle" Grid.Row="0" ItemsSource="{x:Bind ViewModelPage.ItemsSideBarHeader, Mode=OneWay}" HorizontalAlignment="Stretch" Background="Transparent"
                                      SelectionChanged="CmbxSideBarItemTitle_SelectionChanged" Visibility="Collapsed" HorizontalContentAlignment="Center">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="generalVm:SideBarItemHeaderVM">
                                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="{x:Bind Glyph, Mode=OneWay}" FontSize="20"/>
                                            <TextBlock Text="{x:Bind Title, Mode=OneWay}" FontSize="16" VerticalAlignment="Center" Margin="0 0 0 5" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Pivot Grid.Row="1" x:Name="PivotRightSideBar" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Pivot.OpacityTransition>
                                    <ScalarTransition />
                                </Pivot.OpacityTransition>
                            </Pivot>
                        </Grid>
                    </SplitView.Pane>
                </SplitView>
            </Grid>
        </Grid>
        <!--Statusbar-->
        <Grid x:Name="GridStatusBar" Grid.Row="1" VerticalAlignment="Bottom" Height="28" Background="{ThemeResource SystemControlChromeLowAcrylicElementBrush}">
            <!--<Grid.Background>
                <SolidColorBrush Color="White" Opacity="0.5" />
            </Grid.Background>-->
            <StackPanel Orientation="Horizontal" Spacing="18" Padding="5, 0" VerticalAlignment="Center">
                <Button Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" VerticalAlignment="Center" VerticalContentAlignment="Center"
                        Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <Grid>
                            <MUIXC:ProgressRing IsIndeterminate="{x:Bind ViewModelPage.TaskList.Count, Converter={StaticResource intToBooleanConverter}, Mode=OneWay}" Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" Height="20" Width="20"/>
                            <FontIcon FontSize="12" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE73E;" Visibility="{x:Bind ViewModelPage.TaskList.Count, Converter={StaticResource intToInvertVisibilityConverter}, Mode=OneWay}"/>
                        </Grid>
                        <TextBlock Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" FontWeight="Medium">
                            <Run Text="{x:Bind ViewModelPage.TaskList.Count, Mode=OneWay}"/>
                            <Run Text="tâche(s) en cours d'exécution"/>
                        </TextBlock>
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Tâches en cours d'exécution" Foreground="{ThemeResource SystemColorControlAccentBrush}"/>
                                <Rectangle Height="1" Grid.Row="1" Fill="{ThemeResource SystemColorControlAccentBrush}"/>
                                <ListView Grid.Row="2" ItemsSource="{x:Bind ViewModelPage.TaskList, Mode=OneWay}" SelectionMode="Single" IsItemClickEnabled="False">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="generalVm:TaskVM">
                                            <Grid ColumnSpacing="8" Padding="0 5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{x:Bind Description, Mode=OneWay}" TextWrapping="Wrap" MaxWidth="200"/>
                                                <Button Grid.Column="1" Command="{StaticResource CancelTaskXUiCmd}" CommandParameter="{x:Bind Mode=OneWay}" MTUUi:FrameworkElementExtensions.Cursor="Hand">
                                                    <TextBlock Text="Annuler" />
                                                </Button>
                                            </Grid>
                                        </DataTemplate>

                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" FontWeight="Medium">
                    <Run Text="Nombre de livre :" />
                    <Run Text="{x:Bind _parameters.ParentLibrary.Books.Count, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Foreground="{ThemeResource AppBarItemForegroundThemeBrush}" FontWeight="Medium">
                    <Run Text="Elements sélectionnés :" />
                    <Run Text="{x:Bind ViewModelPage.SelectedItems.Count, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
        <!--CommandBar-->
        <CommandBar x:Name="MyCommand" VerticalAlignment="Top" IsSticky="True" Background="{ThemeResource SystemControlChromeLowAcrylicElementBrush}" DefaultLabelPosition="Right">
            <AppBarButton x:Name="ABBtn_SelectedItems" ToolTipService.ToolTip="Livre(s) sélectionné(s)" Label="{x:Bind ViewModelPage.SelectedItems.Count, Converter={StaticResource CountToStringPhraseConverter}, ConverterParameter='counter livre(s) sélectionné(s)', Mode=OneWay}"
                          IsEnabled="{x:Bind ViewModelPage.SelectedItems.Count, Converter={StaticResource CountToEnablingConverter}, Mode=OneWay}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xe762;"/>
                </AppBarButton.Icon>
                <AppBarButton.Flyout>
                    <Flyout Placement="BottomEdgeAlignedRight">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button x:Name="Btn_SelectAll" Grid.Column="0" BorderBrush="Transparent" BorderThickness="0" Background="Transparent" IsEnabled="{x:Bind ViewModelPage.SelectedItems.Count, Mode=OneWay, Converter={StaticResource CountToEnablingConverter}}" HorizontalAlignment="Center" Margin="0,4" Click="Btn_SelectAll_Click">
                                    <FontIcon VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe8b3;" Foreground="{ThemeResource SystemAccentColor}" ToolTipService.ToolTip="Sélectionner toutes les fiches" MTUUi:FrameworkElementExtensions.Cursor="Hand"/>
                                </Button>
                                <Button x:Name="Btn_UnSelectAll" Grid.Column="1" BorderBrush="Transparent" BorderThickness="0" Background="Transparent" IsEnabled="{x:Bind ViewModelPage.SelectedItems.Count, Mode=OneWay, Converter={StaticResource CountToEnablingConverter}}" HorizontalAlignment="Center" Margin="0,4" Click="Btn_UnSelectAll_Click">
                                    <FontIcon VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xe8e6;" Foreground="{ThemeResource SystemAccentColor}" ToolTipService.ToolTip="Désélectionner toutes les fiches" MTUUi:FrameworkElementExtensions.Cursor="Hand"/>
                                </Button>
                                <Button x:Name="Btn_Collection_Categorie" Grid.Column="2" BorderBrush="Transparent" BorderThickness="0" Background="Transparent" IsEnabled="{x:Bind ViewModelPage.SelectedItems.Count, Mode=OneWay, Converter={StaticResource CountToEnablingConverter}}" HorizontalAlignment="Center" Margin="0,4" Click="Btn_Collection_Categorie_Click">
                                    <FontIcon VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE81E;" Foreground="{ThemeResource SystemAccentColor}" ToolTipService.ToolTip="Désélectionner toutes les fiches" MTUUi:FrameworkElementExtensions.Cursor="Hand"/>
                                </Button>
                                <Button x:Name="Btn_Edit_Books" Grid.Column="3" BorderBrush="Transparent" BorderThickness="0" Background="Transparent" IsEnabled="{x:Bind ViewModelPage.SelectedItems.Count, Mode=OneWay, Converter={StaticResource CountToEnablingConverter}}" HorizontalAlignment="Center" Margin="0,4" Click="Btn_UnSelectAll_Click">
                                    <FontIcon VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE70F;" Foreground="{ThemeResource SystemAccentColor}" ToolTipService.ToolTip="Désélectionner toutes les fiches" MTUUi:FrameworkElementExtensions.Cursor="Hand"/>
                                </Button>
                                <Button x:Name="Btn_DeleteAll" Grid.Column="4" BorderBrush="Transparent" BorderThickness="0" Background="Transparent" IsEnabled="{x:Bind ViewModelPage.SelectedItems.Count, Mode=OneWay, Converter={StaticResource CountToEnablingConverter}}" HorizontalAlignment="Center" Margin="0,4" Click="Btn_DeleteAll_Click">
                                    <FontIcon VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE74D;" Foreground="{ThemeResource SystemAccentColor}" ToolTipService.ToolTip="Supprimer les fiches fiches sélectionnées" MTUUi:FrameworkElementExtensions.Cursor="Hand"/>
                                    <Button.Flyout>
                                        <Flyout>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" MaxWidth="400" FontSize="13" FontWeight="Medium" Foreground="{ThemeResource SystemControlForegroundAccentBrush}" TextWrapping="Wrap" Padding="4">
                                                        <Run Text="Que souhaitez-vous effacer ?" />
                                                    <LineBreak />
                                                        <Run Text="Veuillez noter que ces actions sont irréversibles." />
                                                </TextBlock>
                                                <ListView Grid.Row="1" SelectionMode="Single">
                                                    <ListViewItem>
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xe8f1;"/>
                                                            <TextBlock Text="Décatégoriser ces livres"/>
                                                        </StackPanel>
                                                    </ListViewItem>
                                                    <ListViewItem>
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xe736;"/>
                                                            <TextBlock Text="Supprimer ces livres"/>
                                                        </StackPanel>
                                                    </ListViewItem>
                                                </ListView>
                                                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8">
                                                    <Button Content="Annuler" HorizontalAlignment="Right" Margin="0,4" />
                                                    <Button Content="Supprimer tout" HorizontalAlignment="Right" Margin="0,4"/>
                                                </StackPanel>
                                            </Grid>
                                        </Flyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>
                            <Rectangle Height="1" Grid.Row="1" Fill="{ThemeResource SystemColorControlAccentBrush}"/>
                            <ListView x:Name="Lv_SelectedItems" Margin="0,5,0,0" HorizontalAlignment="Stretch" Grid.Row="2" ItemsSource="{x:Bind ViewModelPage.SelectedItems, Mode=OneWay}" MaxHeight="500"
                                      ItemTemplate="{StaticResource ItemAutoSuggestDataTemplate}" IsItemClickEnabled="False" SelectionMode="Single" SelectionChanged="Lv_SelectedItems_SelectionChanged">

                            </ListView>
                        </Grid>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton ToolTipService.ToolTip="Grouper par">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xF168;"/>
                </AppBarButton.Icon>
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ViewModelPage.GroupedBy, Converter={StaticResource groupbyToBooleanConverter}, ConverterParameter='parution-year', Mode=OneWay}" Text="Année de parution" Command="{StaticResource GroupByParutionYearXamlUICommand}"/>
                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ViewModelPage.GroupedBy, Converter={StaticResource groupbyToBooleanConverter}, ConverterParameter='creation-year', Mode=OneWay}" Text="Année de création" Command="{StaticResource GroupByCreationYearXamlUICommand}"/>
                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ViewModelPage.GroupedBy, Converter={StaticResource groupbyToBooleanConverter}, ConverterParameter='letter', Mode=OneWay}" Text="Lettre" Command="{StaticResource GroupByLetterXamlUICommand}"/>
                        <MenuFlyoutSeparator/>
                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ViewModelPage.GroupedBy, Converter={StaticResource groupbyToBooleanConverter}, ConverterParameter='none', Mode=OneWay}" Text="Aucun" Command="{StaticResource GroupByNoneXamlUICommand}"/>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton Icon="Filter" ToolTipService.ToolTip="Trier par">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ViewModelPage.OrderedBy, Converter={StaticResource orderbyToBooleanConverter}, ConverterParameter='croissant', Mode=OneWay}" Text="Croissant" Command="{StaticResource OrderByCroissantXamlUICommand}"/>
                        <ToggleMenuFlyoutItem IsChecked="{x:Bind ViewModelPage.OrderedBy, Converter={StaticResource orderbyToBooleanConverter}, ConverterParameter='dCroissant', Mode=OneWay}" Text="Décroissant" Command="{StaticResource OrderByDCroissantXamlUICommand}"/>
                        <MenuFlyoutSeparator/>
                        <ToggleMenuFlyoutItem Text="Nom" IsChecked="{x:Bind ViewModelPage.OrderedBy, Converter={StaticResource sortbyToBooleanConverter}, ConverterParameter='name', Mode=OneWay}" Command="{StaticResource SortByNameXamlUICommand}"/>
                        <ToggleMenuFlyoutItem Text="Date de création" IsChecked="{x:Bind ViewModelPage.OrderedBy, Converter={StaticResource sortbyToBooleanConverter}, ConverterParameter='dateCreation', Mode=OneWay}" Command="{StaticResource SortByDateCreationXamlUICommand}"/>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton ToolTipService.ToolTip="Vue grille" Label="Pages" LabelPosition="Collapsed">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xF597;"/>
                </AppBarButton.Icon>
                <AppBarButton.Flyout>
                    <Flyout>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Vertical">
                                <TextBlock Text="Nombre maximum d'éléments par page" Foreground="{ThemeResource SystemColorControlAccentBrush}"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Slider Minimum="10" Value="{x:Bind ViewModelPage.MaxItemsPerPage, Mode=TwoWay}" Maximum="1000" StepFrequency="10" Width="220" ManipulationCompleted="Slider_ManipulationCompleted" ManipulationMode="All"
                                            VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Bind ViewModelPage.MaxItemsPerPage, Mode=OneWay}" VerticalAlignment="Top" FontSize="16" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Grid.Row="1" MaxWidth="250" Text="Attention : un nombre important d'élément affichés par page peut avoir un impact considérable sur les performances" TextWrapping="Wrap"/>
                        </Grid>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarToggleButton ToolTipService.ToolTip="Vue liste" Label="Liste" LabelPosition="Collapsed" IsChecked="{x:Bind ViewModelPage.GroupedRelatedViewModel.DataViewMode, Mode=OneWay, Converter={StaticResource objectToBooleanConverter}, ConverterParameter='DataGridView'}" Click="ABTBtn_DataGridViewMode_Click" Unchecked="ABTBtn_DataGridViewMode_Unchecked">
                <AppBarToggleButton.Icon>
                    <FontIcon Glyph="&#xE8FD;"/>
                </AppBarToggleButton.Icon>
            </AppBarToggleButton>
            <AppBarToggleButton ToolTipService.ToolTip="Vue grille" Label="Grille" LabelPosition="Collapsed" IsChecked="{x:Bind ViewModelPage.GroupedRelatedViewModel.DataViewMode, Mode=OneWay, Converter={StaticResource objectToBooleanConverter}, ConverterParameter='GridView'}" Click="ABTBtn_GridViewMode_Click" Unchecked="ABTBtn_GridViewMode_Unchecked">
                <AppBarToggleButton.Icon>
                    <FontIcon Glyph="&#xF0E2;"/>
                </AppBarToggleButton.Icon>
            </AppBarToggleButton>
            <AppBarSeparator/>
            <AppBarButton ToolTipService.ToolTip="Affiche les auteurs ou les contacts emprunteurs">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7BC;" FontSize="18"/>
                </AppBarButton.Icon>
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Afficher les catégories" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource DisplayCategorieListXUiCmd}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE81E;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Afficher les collections" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource DisplayCollectionListXUiCmd}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE81E;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Afficher les auteurs" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource DisplayAuthorListXamlUICommand}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xe77b;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Afficher les adhérants" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource DisplayContactListXamlUICommand}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xe77b;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton x:Name="ABBAddItem" Icon="Add" ToolTipService.ToolTip="Ajouter un élément">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Ajouter un livre" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource NewBookXamlUICommand}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xe736;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Ajouter un auteur" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource NewAuthorXamlUICommand}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xe77b;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Ajouter un adhérant" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource NewContactXamlUICommand}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xe77b;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Ajouter une collection" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource NewCollectionXUiCmd}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE81E;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Ajouter un éditeur" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource NewEditorXUiCmd}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE731;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton Icon="RepeatAll" LabelPosition="Collapsed" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource ReloadDataXamlUICommand}"/>
            <AppBarSeparator/>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Modifier l'image d'arrière-plan" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource ChangeBackgroundImageXUiCmd}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xEB9F;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton Label="Exporter tous les livres" MTUUi:FrameworkElementExtensions.Cursor="Hand" Command="{StaticResource ExportAllBookXamlUICommand}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xEDE1;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton Icon="Help" Label="Aide" MTUUi:FrameworkElementExtensions.Cursor="Hand"/>
            </CommandBar.SecondaryCommands>
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <AutoSuggestBox x:Name="ASB_SearchItem" Width="310" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="4,8,0,4" 
                    PlaceholderText="Rechercher un livre" IsSuggestionListOpen="False" ItemTemplate="{StaticResource ItemAutoSuggestDataTemplate}"
                                    TextChanged="ASB_SearchItem_TextChanged" SuggestionChosen="ASB_SearchItem_SuggestionChosen" QuerySubmitted="ASB_SearchItem_QuerySubmitted">
                        <AutoSuggestBox.QueryIcon>
                            <SymbolIcon Symbol="Find" ToolTipService.ToolTip="Afficher tous les résultats"/>
                        </AutoSuggestBox.QueryIcon>
                    </AutoSuggestBox>
                </StackPanel>
            </CommandBar.Content>
        </CommandBar>
    </Grid>
</Page>
